{
    "version": "2.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}",
                "-std=c++11",
                "-Wall",
                "-lc",
                "-D_GLIBCXX_USE_CXX11_ABI=0", 
                "-Dlocale=pt_BR.UTF-8" 
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
